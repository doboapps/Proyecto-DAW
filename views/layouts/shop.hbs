<!DOCTYPE html>
<html lang="es" class="no-js">

<head>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{path}}css/reset.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous">
        <link rel="stylesheet" href="{{path}}css/shop.css">
        <script src="{{path}}js/modernizr.js"></script>

        <title>Shop</title>

    </head>

    <body class="foo">
        <header>
            <div id="logo">
                <img src="{{path}}images/cd-logo.svg" alt="Homepage">
            </div>

            <div id="cd-hamburger-menu">
                <a class="cd-img-replace" href="#0">Menu</a>
            </div>
            <div id="cd-cart-trigger">
                <a class="cd-img-replace" href="#0">Cart</a>
            </div>
        </header>

        <nav id="main-nav">
            <ul>
                <li>
                    <a class="{{markHome}}" href="{{path}}{{lang}}">{{langWords.home}}</a>
                </li>
                <li>
                    <a class="{{markAbout}}" href="#0">{{langWords.about}}</a>
                </li>
                <li>
                    <a class="{{markProducts}}" href="{{path}}{{lang}}/products">{{langWords.products}}</a>
                </li>
                <li>
                    <a class="{{markGalery}}" href="#0">{{langWords.gallery}}</a>
                </li>
                <li>
                    <a class="{{markContact}}" href="#0">{{langWords.contact}}</a>
                </li>
                {{#unless sessionToken}}        
                <li>
                    <a class="show-login"  href="#">Login</a>
                </li>
                <li>
                    <a id="register" class=""  href="{{path}}{{lang}}/register">Register</a>
                </li>
                {{else}}
                <li>
                    <a id="logout" onclick="logOut('{{lang}}')" href="#">{{dataUser.name}} Logout</a>
                </li>                
                {{/unless}}
                
                
                
                
                
                <li>

            

                    <select id="language-select" class="form-control">
                        <option id="option-es" value="/es{{url}}">es</option>
                        <option id="option-en" value="/en{{url}}">en</option>                
                    </select>
                </li>
            </ul>
        </nav>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        {{{body}}}

        <div id="cd-shadow-layer"></div>

        <div id="cd-cart">
            <h2>Cart</h2>
            <ul id="ul-card" class="cd-cart-items">
                <span>
                 {{#each cart}}
                <li id="li{{this._id}}">
                    <span class="cd-qty"><span id="unit{{this._id}}">{{this.__v}}</span>x</span> {{this.name}}
                    <div class="cd-price">{{this.price}}€</div>
                    <a href="#0" id="remove{{this._id}}" class="cd-item-remove cd-img-replace">Remove</a>
                </li>
                {{/each}}
                

            </ul>
            <!-- cd-cart-items -->

            <div class="cd-cart-total">                
                <p>
                Total <span id="total">{{totalPrice}}€</span>
                </p>
            </div>
            <!-- cd-cart-total -->
             <p id="empty-cart-menu" >
                <a class="text-danger" href="#0">Vaciar Carro</a>
            </p>
            <a href="{{path}}{{lang}}/cart" class="checkout-btn">Go to cart page</a>

 
        </div>
        <!-- cd-loging -->

        
   
        <div id="login-div" style="" class="bg-dark"><br>
            <a href="/admin/home" class="navbar-brand w-25"><img class="col-sm-3 col-md-4 " src="https://upload.wikimedia.org/wikipedia/commons/a/ab/Logo_TV_2015.png" alt="logo"></a>
            <div style="color:tomato">{{{sessionToken}}}



            </div>    
            <form class="col-md-4 offset-md-4 bg-light" id="login" method="post" onsubmit="return sendForm();"><br>
            
            <div class="form-group" >
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Tu email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Password">
            </div>
            <label id="message" class="text-danger" for="exampleInputPassword1"></label>
            <br><button type="submit" name="submit" class="btn btn-primary">Enviar</button><br><br>
            </form>
        </div>

        

 

        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
        <script src="{{path}}js/main.js"></script>     
        <script src="{{path}}js/global.js"></script>
        <script>

            let lang ='{{lang}}';
            $("#option-{{lang}}").attr("selected",true);


            $('.show-login').click(function(){
                if ($('#login-div').css('display') == 'none' )
                    $('#login-div').css('display','inherit');
                else
                    $('#login-div').css('display','none');
            });



            $('#message').append(localStorage.getItem("message")+"<br>");
            localStorage.setItem("message","")                       
                    
                    function sendForm(){

                    var xmlhttp = new XMLHttpRequest();
                        const formLogin = document.querySelector("#login")
                        formData=formToJson(formLogin);
                        //console.log("data",formData);                                              

                        sendAjaxHttp(xmlhttp,"POST",`Bearer {{{sessionToken}}}`,'../../../login',formData);
                        
                        xmlhttp.onreadystatechange=function(){
                            if(xmlhttp.readyState==4){
                                    var resp = xmlhttp.responseText;
                                    var respJSON = JSON.parse(resp);
                            
                            if(respJSON.login){
                                location.reload();                      
                            }else{
                                console.log("login-admin",respJSON); 
                                $("#message").text("Usuario o contraseña incorrectos.");
                                }                     
                                     
                            }
                        }

                        return false;
                    }



 
        </script>

             
        
    </body>
</html>